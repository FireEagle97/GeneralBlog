@inject IHttpContextAccessor context;
@using GeneralBlogApp.ViewModels;
@model IEnumerable<CategoryVM>

@{
	ViewData["Title"] = "Category Home Page";
	// var archivedCatList = (List<CLK_BlogAdmin.ViewModels.CategoryVM>)ViewBag.ArchivedCatList;
