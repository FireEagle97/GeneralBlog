@model GeneralBlogApp.ViewModels.CategoryVM
@{
    ViewData["Title"] = "Create Category Page";
}

<section role="main" class="content-body">

    <!-- start: page -->
	<div class="row">
		<div class="col">
			<section class="card">
				<header class="card-header">
                    <h2 class="card-title text-primary">Create Category</h2>
				</header>
				<div class="card-body">
                    <form class="form-horizontal form-bordered" id="createCatForm" asp-action="Create" method="post" enctype="multipart/form-data">
                        <div class="form-group row pb-3">
                            <label class="col-lg-3 control-label text-lg-end pt-2">Category Name</label>
                            <div class="col-lg-6">
                                <input asp-for="@Model.Category.Name" class="form-control" />
                                <span asp-validation-for="@Model.Category.Name" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group row pb-3">
                            <label class="col-lg-3 control-label text-lg-end pt-2" for="textareaDefault">Meta Description</label>
                            <div class="col-lg-6">
                                <textarea asp-for="Category.MetaDescription" class="form-control" rows="3" data-plugin-maxlength maxlength="140"></textarea>
                            </div>
                        </div>
                        <div class="form-group row pb-3">
                            <label class="col-lg-3 control-label text-lg-end pt-2">Meta Keywords</label>
                            <div class="col-lg-6">
                                <div class="content">
                                    <p>Please press Enter after each tag</p>
                                    <div class="tag-box">
                                        <ul>
                                            <input type="text" />
                                        </ul>
                                    </div>
                                </div>
                      @*           <div class="details">
                                    <p><span></span> tags are remaining</p>
                                    <button class="btn btn-secondary">Remove All</button>
                                </div> *@
                            </div>
                        </div>
                        <div class="form-group text-center pb-2">
                            <input type="submit" value="Create" class="btn btn-primary" />
                            <a asp-controller="Category" asp-action="Index" class="btn btn-secondary ms-2" style="width:150px">
                                Back to List
                            </a>
                        </div>
                    </form>
                    
                </div>           
             </section>                   
            
        </div>
    </div>

    <!-- end: page -->
</section>
@section Scripts{
    <script asp-src-include="~/site.js"></script>
    <script>
        
        let tagManager = new TagManager(".tag-box ul", "input", ".details span", 10);
        tagManager.input.addEventListener('keydown', function (e) {
            if (e.key === 'Enter') {
                e.preventDefault();
            }
        });
        $('#createCatForm').submit(function (event) {
            // Add hidden input to store tags array in the form data
            $('<input>').attr({
                type: 'hidden',
                name: 'MetaKeywords',
                value: JSON.stringify(tagManager.tags)
            }).appendTo('#createCatForm');

        });
    </script>
    @{
   
    <partial name="_ValidationScriptsPartial" />

    }
}

